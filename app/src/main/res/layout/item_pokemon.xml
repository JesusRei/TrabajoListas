<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewPokemon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokemon_list_pokemons" />

    <TextView
        android:id="@+id/textViewNamePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Pikachu"
        app:layout_constraintStart_toEndOf="@+id/imageViewPokemon"
        app:layout_constraintTop_toTopOf="@+id/imageViewPokemon" />

    <TextView
        android:id="@+id/textViewNumberPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0025"
        app:layout_constraintStart_toEndOf="@+id/textViewNamePokemon"
        app:layout_constraintTop_toTopOf="@+id/textViewNamePokemon" />

    <TextView
        android:id="@+id/textViewTypePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:text="Electrico"
        app:layout_constraintStart_toEndOf="@+id/imageViewPokemon"
        app:layout_constraintTop_toBottomOf="@+id/textViewNamePokemon" />

    <TextView
        android:id="@+id/textViewNaturePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:text="Alegre"
        app:layout_constraintStart_toEndOf="@+id/imageViewPokemon"
        app:layout_constraintTop_toBottomOf="@+id/textViewTypePokemon" />

    <TextView
        android:id="@+id/textViewAbilityPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:text="Habilidad Inata"
        app:layout_constraintStart_toEndOf="@+id/imageViewPokemon"
        app:layout_constraintTop_toBottomOf="@+id/textViewNaturePokemon" />

    <TextView
        android:id="@+id/textViewSexPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Macho"
        app:layout_constraintStart_toEndOf="@+id/textViewAbilityPokemon"
        app:layout_constraintTop_toTopOf="@+id/textViewAbilityPokemon" />
</androidx.constraintlayout.widget.ConstraintLayout>